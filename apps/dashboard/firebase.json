{
    "hosting": {
        "public": "dist",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "headers": [{
                "source": "/static/**",
                "headers": [{
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }]
            },
            {
                "source": "**/*.@(js|css|map)",
                "headers": [{
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }]
            },
            {
                "source": "/mf-manifest.json",
                "headers": [{
                        "key": "Access-Control-Allow-Origin",
                        "value": "*"
                    },
                    {
                        "key": "Cache-Control",
                        "value": "public, max-age=0, must-revalidate"
                    }
                ]
            },
            {
                "source": "**/*.@(html|json)",
                "headers": [{
                    "key": "Cache-Control",
                    "value": "public, max-age=0, must-revalidate"
                }]
            }
        ]
    }
}